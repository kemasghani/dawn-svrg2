<div class="custom-feature-section flex flex-col gap-3 px-[2rem] md:px-[5rem] pt-56">
 <div class="flex flex-col md:flex-row gap-10">
  <div class="upper-section bg-[#dbdbdb68] rounded-[30px] py-20 pl-16 w-[100%]">
    <h2 class="text-[20px] md:text-[24px]">KENAPA HARUS BELI DI WEBSITE SVRG.</h2>
    <ul class="mt-6 text-[15px] md:text-[18px] font-normal">
      <li>Gratis Ongkir</li>
      <li>Special <i>Packaging</i></li>
      <li>Jaminan <i>Return/Refund</i></li>
    </ul>
    <button class="read-more-btn rounded-2xl text-[12px] md:text-[16px]">Read More</button>
  </div>
  <div class="flex flex-col w-full">
    <div class="image ">
      <img src="{{ section.settings.image | img_url: '200x' }}" alt="{{ section.settings.title_1 }}" class="rounded-tr-[30px] rounded-tl-[30px]">
    </div>
    <div class="feature-icons bg-[black] flex items-baseline rounded-br-[30px] rounded-bl-[30px] py-10 px-8 w-[100%] h-fit">
      <div class="feature-item flex flex-col items-center gap-6">
        <img src="{{ section.settings.icon_1 | img_url: '200x' }}" alt="{{ section.settings.title_1 }}">
        <h3 class="text-[10px] md:text-[12px]">{{ section.settings.title_1 }}</h3>
      </div>
      <div class="feature-item flex flex-col items-center gap-6">
        <img src="{{ section.settings.icon_2 | img_url: '200x' }}" alt="{{ section.settings.title_2 }}">
        <h3 class="text-[10px] md:text-[12px]">{{ section.settings.title_2 }}</h3>
      </div>
      <div class="feature-item flex flex-col items-center gap-6">
        <img src="{{ section.settings.icon_3 | img_url: '200x' }}" alt="{{ section.settings.title_3 }}">
        <h3 class="text-[10px] md:text-[12px]">{{ section.settings.title_3 }}</h3>
      </div>
    </div>
  </div>
 </div>
 <div class="bg-black flex justify-between items-center w-full text-white rounded-[18px] py-5 px-11">
  <span class="text-[10px] md:text-[14px] font-semibold">{{ section.settings.social_text }}</span>
  <div class="flex follow-us">
    {%- render 'social-icons', class: 'footer__list-social' -%}
  </div>
 </div>
</div>

<style>
.custom-feature-section {
  max-width: var(--page-width);
  margin: auto;
}

.upper-section h2 {
  letter-spacing: -0.5px !important;
  font-weight: bold;
}

.upper-section ul {
 margin-left: 30px;
  padding: 0;
}

.upper-section ul li {
  letter-spacing: -0.5px !important;
  margin-bottom: 5px;
}

.upper-section i {
  font-style: italic;
}

.read-more-btn {
  margin-top: 20px;
  padding: 10px 20px;
  background-color: black;
  color: white;
  border: none;
  cursor: pointer;
}

.feature-icons {
  display: flex;
  justify-content: space-between;
}

.feature-item {
  text-align: center;
  width: 33%;
}

.feature-item img {
  max-width: 50px;
  max-height: 45px;
}
.image img{
  width:100%;
  max-height: max-content;
}

.feature-item h3 {
  letter-spacing: 0px !important;
  font-weight: bold;
  color: white;
}

.feature-item p {
  letter-spacing: -0.5px !important;
  font-size: 14px;
}
.follow-us svg{
  color: white !important;
}
</style>


{% schema %}
{
  "name": "Custom Feature Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Icon 1"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "default": "Gratis Ongkir"
    },
    {
      "type": "text",
      "id": "description_1",
      "label": "Description 1",
      "default": "Free shipping across Indonesia"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Icon 2"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "default": "Special Packaging"
    },
    {
      "type": "text",
      "id": "description_2",
      "label": "Description 2",
      "default": "Special care in packaging"
    },
    {
      "type": "image_picker",
      "id": "icon_3",
      "label": "Icon 3"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title 3",
      "default": "Return / Refund Guarantee"
    },
    {
      "type": "text",
      "id": "description_3",
      "label": "Description 3",
      "default": "Easy returns and refunds"
    },
    {
      "type": "text",
      "id": "social_text",
      "label": "Social Text"
    }
  ],
  "presets": [
    {
      "name": "Custom Feature Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
