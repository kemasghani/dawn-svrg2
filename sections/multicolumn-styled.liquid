{{ 'multicolumn-styled.css' | asset_url | stylesheet_tag }}
<section class="custom-featured-section">
    <div class="container">
      <div class="featured-cards">
        <!-- First Card (Dynamic Content) -->
        <div class="card">
          <div class="card-image">
            <img src="{{ section.settings.image_1 | image_url }}" alt="Card Image 1" />
            <div class="overlay-content flex flex-col justify-between">
                <div class="flex flex-col gap-8">
                    <h2>{{ section.settings.title_1 }}</h2>
                    <ul>
                    <li>{{ section.settings.benefit_1 }}</li>
                    <li>{{ section.settings.benefit_2 }}</li>
                    <li>{{ section.settings.benefit_3 }}</li>
                    </ul>
                    <div>
                    <a href="{{ section.settings.link_1 }}" class="btn">{{ section.settings.button_text_1 }}</a>
                    </div>
                </div>
                <div class="card-icons">
                    <div class="icon-item">
                    <img src="{{ section.settings.icon_1 | image_url }}" alt="Icon 1">
                    <p class="!text-white">{{ section.settings.icon_text_1 }}</p>
                    </div>
                    <div class="icon-item">
                    <img src="{{ section.settings.icon_2 | image_url }}" alt="Icon 2">
                    <p class="!text-white">{{ section.settings.icon_text_2 }}</p>
                    </div>
                    <div class="icon-item">
                    <img src="{{ section.settings.icon_3 | image_url }}" alt="Icon 3">
                    <p class="!text-white">{{ section.settings.icon_text_3 }}</p>
                    </div>
                </div>
            </div>
          </div>
        </div>

        <!-- Second Card (Dynamic Content) -->
        <div class="card">
          <div class="card-image">
            <img src="{{ section.settings.image_2 | image_url }}" alt="Card Image 2" />
            <div class="overlay-content flex flex-col justify-center items-center gap-16">
              <h2>{{ section.settings.title_2 }}</h2>
              <div>
                <a href="{{ section.settings.link_2 }}" class="btn">{{ section.settings.button_text_2 }}</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Third Card (Dynamic Content) -->
        <div class="card">
          <div class="card-image">
            <img src="{{ section.settings.image_3 | image_url }}" alt="Card Image 3" />
            <div class="overlay-content flex flex-col justify-center gap-20 items-center">
              <div>
                <a href="{{ section.settings.link_3 }}#map-section" class="btn">{{ section.settings.button_text_3 }}</a>
              </div>
              <p class="text-[9px] text-center">{{ section.settings.subtitle_3 }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>


