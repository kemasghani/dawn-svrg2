<style>
  .list-benefit svg{
    height: 28px;
    transform: translateY(-4px);
  }
.custom-feature-section {
  max-width: var(--page-width);
  margin: auto;
}

.upper-section h2 {
  letter-spacing: -0.5px !important;
  font-weight: bold;
}

.upper-section ul {
 margin-left: 30px;
  padding: 0;
}

.upper-section ul li {
  letter-spacing: -0.5px !important;
  margin-bottom: 5px;
}

.upper-section i {
  font-style: italic;
}

.read-more-btn {
  margin-top: 20px;
  padding: 10px 20px;
  background-color: black;
  color: white;
  border: none;
  cursor: pointer;
}

.feature-icons {
  display: flex;
  justify-content: space-between;
}

.feature-item {
  text-align: center;
  width: 33%;
}

.feature-item img {
  max-width: 50px;
  max-height: 40px;
}
.image img{
  width:100%;
  height: 350px;
  object-fit: cover;
}

.feature-item h3 {
  letter-spacing: 0px !important;
  font-weight: bold;
  color: white;
}

.feature-item p {
  letter-spacing: -0.5px !important;
  font-size: 14px;
}
.follow-us svg{
  color: white !important;
}
.custom-feature-section .list-social{
  column-gap:5px;
}
</style>


