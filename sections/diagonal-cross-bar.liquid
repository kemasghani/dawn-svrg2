
{%- style -%}
  .section-{{ section.id }}-padding {
    overflow: visible;
    transform: translateY(-70px);
    padding-left: 0;
      padding-right: 0;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-left: 0;
      padding-right: 0;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
    <div class="diagonal-cross-bar">
        <div class="cross-bar-text">
        <span class="py-10 font-light text-[20px] md:text-[30px]">{{ section.settings.bar_text }}</span>
        </div>
    </div>
    <div class="diagonal-cross-bar2">
        <div class="cross-bar-text">
        <span class="py-10 font-light text-[20px] md:text-[30px]">{{ section.settings.bar_text }}</span>
        </div>
    </div>
</div>

  <style>
  .diagonal-cross-bar {
    position: relative;
    width: 110vw;
    height: fit-content;
    background-color: {{ section.settings.background_color }};
    transform: rotate(-7deg) translate(-20px, 75px);
    overflow: hidden;
    z-index: 1;
  }
  .diagonal-cross-bar2 {
    position: relative;
    width: 110vw;
    height: fit-content;
    background-color: {{ section.settings.background_color2 }};
    transform: rotate(5deg) translateX(-20px); /* Adjust the angle */
    overflow: hidden;
    z-index: 1;
  }
  @media screen and (max-width: 650px){
    .diagonal-cross-bar {
      transform: rotate(-15deg) translate(-40px, 75px);
    }
    .diagonal-cross-bar2 {
      transform: rotate(10deg) translateX(-20px); /* Adjust the angle */
    }
  }

  .cross-bar-text {
    width: 200%;
    text-align: center;
    transform: rotate(7deg);
    font-size: 24px;
    color: {{ section.settings.text_color }};
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: scroll-text 80s linear infinite;
  }
  .diagonal-cross-bar2 .cross-bar-text {
    width: 200%;
    text-align: center;
    transform: rotate(-7deg);
    font-size: 24px;
    color: {{ section.settings.text_color }};
    white-space: nowrap;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: scroll-text2 80s linear infinite;
  }

  @keyframes scroll-text {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  @keyframes scroll-text2 {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }
  </style>

  {% schema %}
  {
    "name": "Diagonal Cross Bar",
    "settings": [
      {
        "type": "text",
        "id": "bar_text",
        "label": "Bar Text",
        "default": "UNLEASH YOUR POTENTIAL WITH PREMIUM WORKOUT GEAR DESIGNED FOR PERFORMANCE AND DURABILITY"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#63d7d1"
      },
      {
        "type": "color",
        "id": "background_color2",
        "label": "Background Color 2",
        "default": "#c8d92b"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#000000"
      },
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "presets": [
      {
        "name": "Diagonal Cross Bar",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
